<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/owner_result_button"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:text="New Patient"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#E0A735"
        app:cornerRadius="100dp"
        app:iconTint="#171212"
        app:layout_constraintBottom_toTopOf="@+id/main_consultation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_stat"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:text="Stats"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#E0A735"
        app:cornerRadius="100dp"
        app:iconTint="#171212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_consultation"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:text="Consultation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#E0A735"
        app:cornerRadius="100dp"
        app:iconTint="#171212"
        app:layout_constraintBottom_toTopOf="@+id/cons_addbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cons_addbutton"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:text="Search"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#E0A735"
        app:cornerRadius="100dp"
        app:iconTint="#171212"
        app:layout_constraintBottom_toTopOf="@+id/main_stat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_vet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dawnware"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />


</androidx.constraintlayout.widget.ConstraintLayout>













